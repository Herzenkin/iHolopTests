{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./node_modules/@types/jasmine"
    ]
  },
  "filesGlob" : [
    "app/**",
    "!node_modules/**",
    "!images/**"
  ],
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules/*"
  ]
}
