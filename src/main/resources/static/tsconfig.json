{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "filesGlob" : [
    "app/**",
    "e2e/**/*",
    "!node_modules/**",
    "!images/**",
    "!code_coverage/**"
  ],
  "include": [
    "app/**/*",
    "e2e/**/*"
  ],
  "exclude": [
    "node_modules",
    "code_coverage"
  ]
}
